@model AudMVC2_1.Models.Client
@{
    ViewBag.Title = "ShowClient";
}

@if (Model.Age < 18)
{
    <h1><span style="color:red">Потребен е надзор од родител или старател</span></h1>

}
else
{
    <h2>@Model.Name</h2>

    <h3>Adresa: @Model.Address</h3>
    <h3>Telefon: @Model.Telephone</h3>
    <h3>Godini: @Model.Age</h3>
    <h3>Clenska karta: @Model.MovieCard</h3>
}



